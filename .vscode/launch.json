{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run VS Code Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "extensionHost",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "npm: build",
      "env": {
        "DEBUG": "*",
        "debug": "*",
        "NODE_ENV": "dev"
      },
    }
  ]
}