{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test", "webview", "out"]
}
